; Run control
integrator               = l-bfgs
nsteps                   = 1000
define                   = -DFLEXIBLE
; EM criteria and other stuff
emtol                    = 100
emstep                   = 0.01
niter                    = 20
nbfgscorr                = 10

; Neighborsearching and short-range nonbonded interactions
cutoff-scheme	= verlet
nstlist			= 1
ns_type			= grid
pbc				= xyz
rlist			= 1.0

; Electrostatics
coulombtype		= PME
rcoulomb		= 0.8

; van der Waals
rvdw			= 0.8